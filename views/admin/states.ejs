<%- include('../partials/head');%>

<body>
  <div class="wrapper">
    <!-- Header start -->
    <%- include('../partials/header.ejs'); %>
    <!-- Header end -->
    <!-- Sidebar start -->
    <%- include('../partials/leftbar');%>
    <!-- Sidebar end -->
    <div class="content-wrapper">
      <!-- main content start -->
      <% if (errors.length> 0) { %>
      <div class="container-fluid py-3 ps-lg-3 pe-lg-4 px-3">
        <div class="row">
          <div class="col-xxl-7">
            <div class="alert alert-danger"><%= errors %></div>
          </div>
        </div>
      </div>
      <% } %> <% if (success.length> 0) { %>
      <div class="container-fluid py-3 ps-lg-3 pe-lg-4 px-3">
        <div class="row">
          <div class="col-xxl-7">
            <div class="alert alert-success"><%= success %></div>
          </div>
        </div>
      </div>
      <% } %>

      <!-- main content start -->
      <main class="container-fluid py-3 ps-lg-3 pe-lg-4 px-3">
        <h5 class="text-dark mb-3">States</h5>
          <div class="px-3 rounded-5 border-0 bg-light-secondary shadow py-4 mb-4">
            <div class="row gx-2">
              <div class="col-xxl-7 col-5">
                <ul
                  class="nav nav-pills nav-pills-head align-items-center mb-0"
                  id="pills-tab"
                  role="tablist"
                >
                  <li class="nav-item me-2 mb-md-0 mb-1" role="presentation">
                    <button
                      class="nav-link btn-xs active"
                      id="pills-active-tab"
                      data-bs-toggle="pill"
                      data-bs-target="#pills-active"
                      type="button"
                      role="tab"
                      aria-controls="pills-active"
                      aria-selected="true"
                    >
                      Active
                    </button>
                  </li>
                  <!-- <li class="nav-item me-2 mb-md-0 mb-1" role="presentation">
                    <button
                      class="nav-link btn-xs"
                      id="pills-inactive-tab"
                      data-bs-toggle="pill"
                      data-bs-target="#pills-inactive"
                      type="button"
                      role="tab"
                      aria-controls="pills-inactive"
                      aria-selected="false"
                    >
                      Inactive
                    </button>
                  </li> -->
                </ul>
              </div>
              <div class="col-xxl-5 col-7">
                <div class="row justify-content-end gx-2">
                  <div class="col-sm-3 col-9">
                    <a
                      role="button"
                      href="edit-state"
                      class="btn btn-primary w-100"
                      >Add New</a
                    >
                  </div>
                </div>
              </div>
            </div>
          </div>
            <div class="tab-content" id="pills-tabContent">
              <div
                class="tab-pane fade show active"
                id="pills-active"
                role="tabpanel"
                aria-labelledby="pills-active-tab"
                tabindex="0"
              >
                <div class="dataTable--custom">
                  <table id="activeTable" class="table w-100">
                    <thead>
                      <tr>
                        <th>State Name</th>
                        <th>Abbrev</th>
                        <th></th>
                        <th>Action</th>
                      </tr>
                    </thead>
                  </table>
                </div>
              </div>
              <!-- <div
                class="tab-pane fade"
                id="pills-inactive"
                role="tabpanel"
                aria-labelledby="pills-inactive-tab"
                tabindex="0"
              >
                <div class="dataTable--custom">
                  <table id="activeTable1" class="table w-100">
                    <thead>
                      <tr>
                        <th>State Name</th>
                        <th></th>
                        <th>Action</th>
                      </tr>
                    </thead>
                  </table>
                </div>
              </div> -->
            </div>
      </main>
      <!-- main content end -->
    </div>
  </div>
  <%- include('../partials/footer.ejs'); %>

  <script>
      function confirmDelete() {
          if (!confirm("Are you sure you want to delete this user")) {
            return false;
          } else {
            return true;
          }
        }

    $(document).ready(function () {
      $("#activeTable").dataTable({
        processing: true,
        serverSide: true,
        responsive: true,
        "initComplete": function (settings, json) {
            $(".dataTables_wrapper .row").addClass("table-wrapup gx-0 mb-2 mb-lg-3");
          },
        columnDefs: [{ targets: 3, orderable: false, sClass: "a-right" }],
        ajax: "state_ajax?type=active",
      });
