<%- include('../partials/head');%>

  <body>
    <div class="wrapper">
    <!-- Header start -->
    <%- include('../partials/header.ejs'); %>
    <!-- Header end -->
      <!-- Sidebar start -->
      <%- include('../partials/leftbar');%>
        <!-- Sidebar end -->
        <div class="content-wrapper">
            <!-- main content start -->
            <% if (errors.length> 0) { %>
              <div class="container-fluid py-3 ps-lg-3 pe-lg-4 px-3">
                <div class="row">
                  <div class="col-xxl-7">
                    <div class="alert alert-danger">
                      <%= errors %>
                    </div>
                  </div>
                </div>
              </div>
              <% } %>
                <% if (success.length> 0) { %>
                  <div class="container-fluid py-3 ps-lg-3 pe-lg-4 px-3">
                    <div class="row">
                      <div class="col-xxl-12">
                        <div class="alert alert-success">
                          <%= success %>
                        </div>
                      </div>
                    </div>
                  </div>
                  <% } %>

                    <!-- main content start -->
                    <main class="container-fluid py-3 ps-lg-3 pe-lg-4 px-3">
                        <div class="px-3 rounded-5 border-0 bg-light-secondary shadow py-4 mb-3 mb-lg-4">
                          <div class="row align-items-center gx-2">
                            <div class="col-sm-7">
                              <h5 class="mb-sm-0">Manage Tags</h5>
                            
                            </div>
                            <div class="col-sm-5 text-sm-end">
                                  <a role="button" href="edit-tags" class="btn btn-primary btn-small">Add New</a>
                            </div>
                          </div>
                        </div>
                          <div class="tab-content" id="pills-tabContent">
                            <div class="tab-pane fade show active" id="pills-active" role="tabpanel"
                              aria-labelledby="pills-active-tab" tabindex="0">
                              <div class="dataTable--custom">
                                <table id="tag_activeTable" class="table w-100">
                                  <thead>
                                    <tr>
                                      <th>No</th>
                                      <th>Tags</th>
                                      <th>Action</th>
                                    </tr>
                                  </thead>
                                </table>
                              </div>
                            </div>

                          </div>
                    </main>
                    <!-- main content end -->
        </div>
    </div>

    <%- include('../partials/footer.ejs'); %>
      <script>
        function confirmDelete() {
          if (!confirm("Are you sure you want to delete this tag")) {
            return false;
          } else {
            return true;
          }
        }
        $(document).ready(function () {
          $("#tag_activeTable").dataTable({
            processing: true,
            serverSide: true,
            responsive: true,
            "initComplete": function (settings, json) {
            $(".dataTables_wrapper .row").addClass("table-wrapup gx-0 mb-2 mb-lg-3");
          },
            columnDefs: [{ targets: 2, orderable: false, sClass: "a-right" }],
            ajax: "tag_ajax",
          });
        });
      </script>
  </body>
  </html>